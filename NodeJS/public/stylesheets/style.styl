body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
  
#holder
  border: 10px dashed #ccc
  width: auto
  min-height: auto
  margin: 2px

#holder.hover
  border: 10px dashed #0c0
  
#holder img
  display: block
  margin: 10px auto;
  
#holder p 
  margin: 10px
  font-size: 14px;

progress
  width: 100%;
  
progress:after
  content: '%'
  
.fail
  background: #c00
  padding: 2px
  color: #fff;
  
.hidden
  display: none !important

